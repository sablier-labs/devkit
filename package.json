{
  "name": "@sablier/devkit",
  "description": "Configuration files and reusable scripts for Sablier repositories",
  "license": "MIT",
  "type": "module",
  "version": "1.6.0",
  "author": {
    "name": "Sablier Labs Ltd",
    "url": "https://sablier.com"
  },
  "bugs": {
    "url": "https://github.com/sablier-labs/devkit/issues"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "prettier": "^3.6.2",
    "vitest": "^3.2.0"
  },
  "peerDependencies": {
    "vitest": ">=2.0.0"
  },
  "peerDependenciesMeta": {
    "vitest": {
      "optional": true
    }
  },
  "exports": {
    "./biome": "./biome/base.jsonc",
    "./biome/ui": "./biome/ui.jsonc",
    "./prettier": "./.prettierrc.json",
    "./tsconfig/base": "./tsconfig/base.json",
    "./tsconfig/build": "./tsconfig/build.json",
    "./tsconfig/next": "./tsconfig/next.json",
    "./vitest": {
      "import": "./vitest/index.js",
      "types": "./vitest/index.d.ts"
    }
  },
  "engines": {
    "node": ">=20"
  },
  "files": [
    "biome/",
    "just/",
    ".prettierrc.json",
    "tsconfig/",
    "vitest/"
  ],
  "keywords": [
    "biome",
    "config",
    "devkit",
    "prettier",
    "sablier",
    "tsconfig",
    "typescript",
    "vitest"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sablier-labs/devkit.git"
  }
}
